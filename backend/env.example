# Database
DATABASE_URL="postgresql://username:password@localhost:5432/defi_automation"

# Redis (for BullMQ)
REDIS_URL="redis://localhost:6379"

# Server
PORT=3000
NODE_ENV=development
JWT_SECRET=your_jwt_secret_here

# 1inch API
ONEINCH_API_KEY=your_1inch_api_key
ONEINCH_BASE_URL=https://api.1inch.dev

# Blockchain RPC URLs
ETHEREUM_RPC_URL=https://eth-mainnet.alchemyapi.io/v2/your-api-key
POLYGON_RPC_URL=https://polygon-mainnet.alchemyapi.io/v2/your-api-key
ARBITRUM_RPC_URL=https://arb-mainnet.alchemyapi.io/v2/your-api-key
BSC_RPC_URL=https://bsc-dataseed1.binance.org/
OPTIMISM_RPC_URL=https://opt-mainnet.alchemyapi.io/v2/your-api-key

# Private keys for contract interactions (use test keys for development)
EXECUTOR_PRIVATE_KEY=your_executor_private_key_here

# AI Services
OPENAI_API_KEY=your_openai_api_key

# Notification Services
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Chainlink/Price Feeds
CHAINLINK_API_KEY=your_chainlink_api_key

# Security
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Feature Flags
ENABLE_AI_SUGGESTIONS=true
ENABLE_CROSS_CHAIN=true
ENABLE_NOTIFICATIONS=true 